@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="box">
    <h3><span>@ViewBag.Title</span></h3>
    <p>
        @Html.ActionLink("Add Role", "Create", null, new {@class = "button button-primary"})
    </p>
    <table class="table">
        <tr>
            <th>
                Role Name
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.Name != "Admin")
                    {
                        @Html.ActionLink("Edit", "Edit", new {id = item.Id}, new {@class = "button button-default"})
                        @:&nbsp
                        @Html.ActionLink("Delete", "Delete", new {id = item.Id}, new {@class = "button button-danger"})
                    }
                    else
                    {
                        @:* restricted access
                    }


                </td>
            </tr>
        }
    </table>

</div>